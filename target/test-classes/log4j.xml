<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}{GMT} [%-10t] %-5p %c %m%n"/>
        </layout>
    </appender>

    <appender name="FILE" class="org.apache.log4j.FileAppender">
        <param name="File" value="target/terremark.log"/>
        <param name="Append" value="true"/>
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}{GMT} [%-10t] %-5p %c %m%n"/>
        </layout>
    </appender>

    <category name="org.apache.wink" additivity="false">
        <priority value="warn"/>
        <appender-ref ref="FILE"/>
    </category>

    <category name="com.terremark" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="FILE"/>
    </category>

    <root>
        <priority value="warn"/>
        <appender-ref ref="STDOUT"/>
    </root>

</log4j:configuration>
